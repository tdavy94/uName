{
 "manifest_version": 2,
 "name": "links",
 "version": "1.0.0",
 "description": "That's what I'm talking about",
 "short_name": "snip snip snip",
 "permissions": ["activeTab", "notifications", "declarativeContent", "storage", "<all_urls>"],
 "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "css": ["stylesheet.css"],
     "js": ["index.js", "popup.js"]
   }
 ],
 "browser_action": {
   "default_title": "Does a thing when you do a thing",
   "default_popup": "popup.html",
   "default_icon": {
     "16": "icons/icon16.png",
     "32": "icons/icon32.png"
   }
 }
}
